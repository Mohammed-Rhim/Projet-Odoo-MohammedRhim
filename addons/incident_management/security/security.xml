<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record Rules pour Portal -->
        <record id="incident_portal_rule" model="ir.rule">
            <field name="name">Incident Portal: voir uniquement ses propres incidents</field>
            <field name="model_id" ref="model_incident_management"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Les utilisateurs peuvent voir tous les incidents -->
        <record id="incident_user_rule" model="ir.rule">
            <field name="name">Incident User: voir tous les incidents</field>
            <field name="model_id" ref="model_incident_management"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
