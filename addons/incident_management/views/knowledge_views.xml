<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste Articles -->
    <record id="view_knowledge_tree" model="ir.ui.view">
        <field name="name">incident.knowledge.tree</field>
        <field name="model">incident.knowledge</field>
        <field name="arch" type="xml">
            <tree string="Base de Connaissances">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_ids" widget="many2many_tags"/>
                <field name="author_id"/>
                <field name="state" decoration-success="state=='published'" 
                       decoration-info="state=='draft'" decoration-muted="state=='archived'"/>
                <field name="view_count"/>
                <field name="helpful_count"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire Articles -->
    <record id="view_knowledge_form" model="ir.ui.view">
        <field name="name">incident.knowledge.form</field>
        <field name="model">incident.knowledge</field>
        <field name="arch" type="xml">
            <form string="Article de Connaissances">
                <header>
                    <button name="action_publish" string="Publier" type="object" 
                            class="oe_highlight" invisible="state == 'published'"/>
                    <button name="action_draft" string="Brouillon" type="object" 
                            invisible="state == 'draft'"/>
                    <button name="action_archive_article" string="Archiver" type="object" 
                            invisible="state == 'archived'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,published"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre de l'article"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="author_id" readonly="1"/>
                            <field name="category_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="view_count" readonly="1"/>
                            <field name="helpful_count" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contenu" name="content">
                            <field name="content" widget="html" 
                                   placeholder="Rédigez le contenu de l'article ici..."/>
                        </page>
                        <page string="Incidents Liés" name="incidents">
                            <field name="incident_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="title"/>
                                    <field name="state"/>
                                    <field name="priority" widget="priority"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban Articles -->
    <record id="view_knowledge_kanban" model="ir.ui.view">
        <field name="name">incident.knowledge.kanban</field>
        <field name="model">incident.knowledge</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="author_id"/>
                <field name="view_count"/>
                <field name="helpful_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="author_id" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span title="Vues"><i class="fa fa-eye"/> <field name="view_count"/></span>
                                        <span title="Utile"><i class="fa fa-thumbs-up"/> <field name="helpful_count"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Recherche Articles -->
    <record id="view_knowledge_search" model="ir.ui.view">
        <field name="name">incident.knowledge.search</field>
        <field name="model">incident.knowledge</field>
        <field name="arch" type="xml">
            <search string="Rechercher Articles">
                <field name="name" string="Titre"/>
                <field name="content" string="Contenu"/>
                <field name="tag_ids" string="Tags"/>
                <field name="category_ids" string="Catégories"/>
                <filter string="Publiés" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Mes Articles" name="my_articles" domain="[('author_id', '=', uid)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Auteur" name="group_author" context="{'group_by': 'author_id'}"/>
                    <filter string="Catégorie" name="group_category" context="{'group_by': 'category_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Liste Tags -->
    <record id="view_knowledge_tag_tree" model="ir.ui.view">
        <field name="name">incident.knowledge.tag.tree</field>
        <field name="model">incident.knowledge.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Action Articles -->
    <record id="action_knowledge" model="ir.actions.act_window">
        <field name="name">Base de Connaissances</field>
        <field name="res_model">incident.knowledge</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_published': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvel article
            </p>
            <p>
                La base de connaissances permet de documenter les solutions et de les réutiliser.
            </p>
        </field>
    </record>

    <!-- Action Tags -->
    <record id="action_knowledge_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">incident.knowledge.tag</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
