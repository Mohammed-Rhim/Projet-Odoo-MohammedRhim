<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste SLA -->
    <record id="view_sla_tree" model="ir.ui.view">
        <field name="name">incident.sla.tree</field>
        <field name="model">incident.sla</field>
        <field name="arch" type="xml">
            <tree string="Politiques SLA">
                <field name="name"/>
                <field name="priority" widget="priority"/>
                <field name="deadline_hours"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire SLA -->
    <record id="view_sla_form" model="ir.ui.view">
        <field name="name">incident.sla.form</field>
        <field name="model">incident.sla</field>
        <field name="arch" type="xml">
            <form string="Politique SLA">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button" 
                               options="{'terminology': 'active'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="ex: SLA Critique"/>
                            <field name="priority" widget="priority"/>
                            <field name="deadline_hours"/>
                        </group>
                        <group>
                            <field name="category_ids" widget="many2many_tags"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description de la politique SLA..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban SLA -->
    <record id="view_sla_kanban" model="ir.ui.view">
        <field name="name">incident.sla.kanban</field>
        <field name="model">incident.sla</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="priority"/>
                <field name="deadline_hours"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><field name="deadline_hours"/> heures</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action SLA -->
    <record id="action_sla" model="ir.actions.act_window">
        <field name="name">Politiques SLA</field>
        <field name="res_model">incident.sla</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle politique SLA
            </p>
            <p>
                Les politiques SLA définissent les délais de résolution selon la priorité des incidents.
            </p>
        </field>
    </record>
</odoo>
