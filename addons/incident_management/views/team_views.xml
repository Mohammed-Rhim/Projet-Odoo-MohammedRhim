<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste Équipes -->
    <record id="view_team_tree" model="ir.ui.view">
        <field name="name">incident.team.tree</field>
        <field name="model">incident.team</field>
        <field name="arch" type="xml">
            <tree string="Équipes de Support">
                <field name="name"/>
                <field name="team_leader_id"/>
                <field name="incident_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire Équipes -->
    <record id="view_team_form" model="ir.ui.view">
        <field name="name">incident.team.form</field>
        <field name="model">incident.team</field>
        <field name="arch" type="xml">
            <form string="Équipe de Support">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_incidents" type="object" class="oe_stat_button" icon="fa-ticket">
                            <field name="incident_count" widget="statinfo" string="Incidents"/>
                        </button>
                        <field name="active" widget="boolean_button" 
                               options="{'terminology': 'active'}"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'équipe"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_leader_id" options="{'no_create': True}"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="category_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Membres" name="members">
                            <field name="member_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description de l'équipe et de ses responsabilités..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban Équipes -->
    <record id="view_team_kanban" model="ir.ui.view">
        <field name="name">incident.team.kanban</field>
        <field name="model">incident.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="team_leader_id"/>
                <field name="incident_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="team_leader_id" widget="many2one_avatar_user"/>
                                    <field name="member_ids" widget="many2many_avatar_user"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><field name="incident_count"/> incidents actifs</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action Équipes -->
    <record id="action_team" model="ir.actions.act_window">
        <field name="name">Équipes de Support</field>
        <field name="res_model">incident.team</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle équipe de support
            </p>
            <p>
                Les équipes permettent d'organiser les membres et d'assigner automatiquement les incidents.
            </p>
        </field>
    </record>
</odoo>
