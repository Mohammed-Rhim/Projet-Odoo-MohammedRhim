<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Graphique - Par État -->
    <record id="view_incident_graph_state" model="ir.ui.view">
        <field name="name">incident.management.graph.state</field>
        <field name="model">incident.management</field>
        <field name="arch" type="xml">
            <graph string="Incidents par État" type="pie" sample="1">
                <field name="state"/>
            </graph>
        </field>
    </record>

    <!-- Vue Graphique - Par Priorité -->
    <record id="view_incident_graph_priority" model="ir.ui.view">
        <field name="name">incident.management.graph.priority</field>
        <field name="model">incident.management</field>
        <field name="arch" type="xml">
            <graph string="Incidents par Priorité" type="bar" sample="1">
                <field name="priority"/>
                <field name="state" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Vue Graphique - Tendances -->
    <record id="view_incident_graph_timeline" model="ir.ui.view">
        <field name="name">incident.management.graph.timeline</field>
        <field name="model">incident.management</field>
        <field name="arch" type="xml">
            <graph string="Tendances des Incidents" type="line" sample="1">
                <field name="create_date" interval="day"/>
                <field name="priority" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Vue Pivot -->
    <record id="view_incident_pivot" model="ir.ui.view">
        <field name="name">incident.management.pivot</field>
        <field name="model">incident.management</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des Incidents" sample="1">
                <field name="category_id" type="row"/>
                <field name="state" type="col"/>
                <field name="priority" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Action Dashboard Principal -->
    <record id="action_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de Bord</field>
        <field name="res_model">incident.management</field>
        <field name="view_mode">graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune donnée disponible
            </p>
            <p>
                Créez des incidents pour voir les statistiques apparaître ici.
            </p>
        </field>
    </record>

    <!-- Action Graphiques -->
    <record id="action_incident_analysis" model="ir.actions.act_window">
        <field name="name">Analyse des Incidents</field>
        <field name="res_model">incident.management</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{'search_default_group_by_state': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune donnée à analyser
            </p>
            <p>
                Les graphiques et analyses apparaîtront une fois que vous aurez créé des incidents.
            </p>
        </field>
    </record>
</odoo>
